<script type="text/javascript">
  function scroll(direction) {
    position = $(window).scrollTop();
    if (direction == "up") {
      $(window).scrollTop(position - 5);
    } else {
      $(window).scrollTop(position + 5);
    }
    if (scrolling) { setTimeout("scroll('" + direction + "')", 5); }
  }
  
  $(document).ready( function() {  
    $('.item').corner("12px");
    $("#items").masonry({ columnWidth: 260 });
    $("#up").mouseenter( function() {
      scrolling = true;
      scroll("up");
    });
    $("#down").mouseenter( function() {
      scrolling = true;
      scroll("down");
    });
    
    $("#up, #down").mouseleave( function () {
      scrolling = false;
      window.clearTimeout();
    });
    
    $("#up #down").click( function() { return false; });
  });
  
  var position = 0;
  var scrolling = false;
</script>